<Window x:Class="SPNP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPNP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">

        <Label Content="Системне програмування" HorizontalAlignment="Center" FontWeight="Bold" FontSize="18"/>

        <Button x:Name="ThreadingButton" Content="Багатопоточність" Margin="20 7" Click="ThreadingButton_Click"/>

    </StackPanel>
</Window>
