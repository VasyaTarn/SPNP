<Window x:Class="SPNP.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPNP"
        mc:Ignorable="d"
        Title="TaskWindow" Height="450" Width="300">
    <StackPanel Orientation="Vertical">
        <Label Content="Багатозадачність"/>
        <Button x:Name="DemoButton1"
                Content="Demo"
                Click="DemoButton1_Click"/>

        <Button x:Name="DemoButton2"
                Content="Demo 2"
                Click="DemoButton2_Click"/>
        <TextBlock Text="" x:Name="LogTextBlock"/>

        <StackPanel Orientation="Vertical">
            <Button Content="sequence" x:Name="SequenceButton" Click="SequenceButton_Click" Margin="0 5" />
            <Button Content="parallelism" x:Name="ParallelismButton" Click="ParallelismButton_Click" Margin="0 5" />
            <ProgressBar x:Name="ProgressBar1" Height="20" Margin="0 5"/>
            <ProgressBar x:Name="ProgressBar2" Height="20" Margin="0 5"/>
            <ProgressBar x:Name="ProgressBar3" Height="20" Margin="0 5"/>
        </StackPanel>
    </StackPanel>
</Window>
